import sys
import time


#function to set the canvas black
def paintblack(canvas2):
  pixels = getPixels(canvas2)
  for i in pixels:
    setColor(i,black)
    

def start():
  #load image from file
  canvas2=makePicture(r".\Ship-image-structure\ship+biodomes.jpg")
  show(canvas2)
  #get input from user
  
  keypress = requestNumber("Press 1 for biodome or 2 for ship: ")
  
  #if the user entered 1 then zoom into the top section of the image
  #if the user enters 2 zoom into the bottom part of the image
  
  if keypress == 1:
    paintblack(canvas2)
    repaint(canvas2)
    EnlargeImageTopSection()
    #time.sleep(2)
  elif keypress == 2:
    paintblack(canvas2)
    repaint(canvas2)
    EnlargeImageBottomSection()
    #time.sleep(2)


def EnlargeImageTopSection():
  #get the image and then make an empty image 
  file=(r".\Ship-image-structure\ship+biodomes.jpg")
  src=makePicture(file)
  
  canvas = makeEmptyPicture(1326,698)
  canvas2 = makeEmptyPicture(1326,698)
  
  
  #Display the image in the empty image
  canvas = src
  
  #get pixels at source X
  #paste horizontal pixels from pixel 10 to pixel 1000
  #get pixels at source Y
  #paste vertical pixels from pixel 100 to pixel 5000
  #scale up by 60%
 
  sourceX = 391
  for targetX in range (10,1000):
    sourceY = 146
    for targetY in range(100,500):
      srcpx = getPixel(src,int(sourceX),int(sourceY))
      color = getColor(srcpx)
      setColor(getPixel(canvas2,targetX,targetY), color)
      sourceY = sourceY + 0.6
    sourceX = sourceX + 0.6
  repaint(canvas2)
  
  
  paintblack(canvas2)
  repaint(canvas2)
  
  #load the biodome image and display it on the canvas
  pic2=makePicture(r".\Ship-image-structure\biodome.jpg")
  for pixel in pic2.getPixels():
    x = getX(pixel)
    y = getY(pixel)
    color = getColor(pixel)
    target = getPixelAt(canvas2, x, y) 
    setColor(target, color)
  repaint(canvas2)
  

    
  
  
  #get user number input and store in variable
  #if the variable is equal to 1 paint the canvas black then load image from file and paint to canvas
  #if the variable is equal to 2 paint the canvas black then load image from file and paint to canvas
  #if the variable is equal to 3 paint the canvas black then load image from file and paint to canvas
  #if the variable is equal to 4 paint the canvas black then load image from file and paint to canvas

  
  
  keypress2 = requestNumber("Press 1-4 for ship images: ")
  if keypress2 == 1:
  
    paintblack(canvas2)
    repaint(canvas2)
       
    pic2=makePicture(r".\Ship-image-structure\Biodome\1.jpg")
    for pixel in pic2.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()
  
  elif keypress2 == 2:
  
    paintblack(canvas2)
    repaint(canvas2)
  
    pic2=makePicture(r".\Ship-image-structure\Biodome\2.png")
    for pixel in pic2.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()
  
  elif keypress2 == 3:
  
    paintblack(canvas2)
    repaint(canvas2) 
  
    pic2=makePicture(r".\Ship-image-structure\Biodome\3.png")
    for pixel in pic2.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()
    
  elif keypress2 == 4:
    paintblack(canvas2)
    repaint(canvas2)
  
    pic2=makePicture(r".\Ship-image-structure\Biodome\4.png")
    for pixel in pic2.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()

def EnlargeImageBottomSection():
  file=(r".\Ship-image-structure\ship+biodomes.jpg")
  canvas = makeEmptyPicture(1326,698)
  canvas2 = makeEmptyPicture(1326,698)
  src=makePicture(file)
  
  canvas = src
  #show(canvas)
  
  sourceX = 80
  for targetX in range(50,1000):
    sourceY = 300
    for targetY in range(50,500):
      srcpx = getPixel(src,int(sourceX),int(sourceY))
      color = getColor(srcpx)
      setColor(getPixel(canvas2,targetX,targetY), color)
      sourceY = sourceY + 0.6
    sourceX = sourceX + 0.6
  repaint(canvas2)
  
  
  paintblack(canvas2)
  repaint(canvas2)
  
  pic2=makePicture(r".\Ship-image-structure\spaceship.jpg")
  for pixel in pic2.getPixels():
    x = getX(pixel)
    y = getY(pixel)
    color = getColor(pixel)
    target = getPixelAt(canvas2, x, y) 
    setColor(target, color)
    pic2 = canvas2
  repaint(canvas2)
  
  keypress2 = requestNumber("Press 1-4 for ship images: ")
  
  if keypress2 == 1:
  
    paintblack(canvas2)
    repaint(canvas2)
  
    pic3=makePicture(r".\Ship-image-structure\Ship\1.png")
    for pixel in pic3.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
  
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()
  
  elif keypress2 == 2:
  
    paintblack(canvas2)
    repaint(canvas2)
    
    pic2=makePicture(r".\Ship-image-structure\Ship\2.jpg")
    for pixel in pic2.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
      
    canvas2 = pic2                                    #copy picture into canvas
    startX = 180
    startY = 280
    endX= 200
    endY = 500
    lineColor = black
    
    for i in range(0, 170):
      addLine(canvas2, startX, startY, endX, endY, lineColor)
      
      startX = startX +2
      startY = startY -1
      endX = endX +2
      endY = endY -1
      i = i +1
      
      repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    #time.sleep(5)
    end()
    
  
  elif keypress2 == 3:
  

    paintblack(canvas2)
    repaint(canvas2)
    pic2=makePicture(r".\Ship-image-structure\Ship\3.jpg")
    for pixel in pic2.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
    
    #reduceRed and then increase red in section
    time.sleep(3)
    sourceX = 422
    for targetX in range (400,750):
      sourceY = 231
      for targetY in range(220,400):
        px = getPixel(canvas2,int(sourceX),int(sourceY))
        redpx = getRed(px)
        setRed(getPixel(pic2,targetX,targetY), redpx /1.5) 
        pic2 = canvas2
    repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()
        
        

    
  elif keypress2 == 4:
    paintblack(canvas2)
    repaint(canvas2)
    
    pic=makePicture(r".\Ship-image-structure\Ship\4-1.jpg")
    bg=makePicture(r".\Ship-image-structure\Ship\4-4.png")

    for pixel in pic.getPixels():
      x = getX(pixel)
      y = getY(pixel)
      color = getColor(pixel)
      target = getPixelAt(canvas2, x, y)
      setColor(target, color)
    repaint(canvas2)
    
    for px in getPixels(bg):
      
      x = getX(px)
      y = getY(px)
      if (getRed(px) + getBlue(px) > getGreen (px)):
        bgpx = getPixel(bg, x, y)
        bgcol = getColor(bgpx)
        target = getPixelAt(canvas2, x, y)
        setColor(target,bgcol)

      pic2 = canvas2
    repaint(canvas2)
    
    #Give the option to start from the beginning again after giving them time to view the image
    time.sleep(5)
    end()

#Ask the user if they would like to start the program again
def end():
  exitoption = requestString("Would you like to start again? (Y/N) ")
  x = 0
  if exitoption == "y":
    start()
  elif exitoption == "n":
    pass
  elif exitoption == "Y":
    start()
  elif exitoption == "N":
    pass
  elif exitoption == "yes":
    start()
  elif exitoption == "no":
    pass
  elif exitoption == "YES":
    start()
  elif exitoption == "NO":
    pass
  else:
    pass
    
  
    
